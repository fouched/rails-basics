<div class="container">
  <div class="row">
    <h1>Users</h1>
  </div>
  <div class="row">
    <div class="table-responsive">
      <table class="table table-sm table-striped table-hover">
        <thead>
        <tr>
          <td>User Name</td>
          <td>Email</td>
          <td>First Name</td>
          <td>Last Name</td>
          <td>Street</td>
          <td>City</td>
          <td>Phone</td>
        </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%=user["username"]%></td>
            <td><%=user["email"]%></td>
            <td><%=user["name"]["firstname"]%></td>
            <td><%=user["name"]["lastname"]%></td>
            <td><%=user["address"]["number"].to_s + " " + user["address"]["street"]%></td>
            <td><%=user["address"]["city"]%></td>
            <td><%=user["phone"]%></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>