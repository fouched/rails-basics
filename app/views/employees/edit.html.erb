<div class="container">
  <div class="row"><h1>Edit employee</h1></div>
  <div class="row mt-3">
    <%= form_for @employee, html: {class: "form-horizontal", multipart: true} do |f| %>

        <div class="form-group row">
          <label for="" class="col-sm-2 control-label">First Name:</label>
          <div class="col-sm-10">
            <%= f.text_field :firstname, placeholder: 'Enter First Name', class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <label for="" class="col-sm-2 control-label">Last Name:</label>
          <div class="col-sm-10">
            <%= f.text_field :lastname, placeholder: 'Enter Last Name', class: 'form-control' %>
          </div>
        </div>


        <div class="form-group row mt-2">
          <label for="" class="col-sm-2 control-label">Phone:</label>
          <div class="col-sm-10">
            <%= f.text_field :phone, placeholder: 'Enter Phone', class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <label for="" class="col-sm-2 control-label">Email:</label>
          <div class="col-sm-10">
            <%= f.text_field :email, placeholder: 'Enter Email', class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <legend class="col-form-label col-sm-2 pt-0">Gender:</legend>
          <div class="col-sm-10">
            <div class="form-check">
              <%= f.radio_button :gender, 'Male', checked: true, data: { toggle: 'radio'}, class: 'form-check-input', id: 'male' %>
              <label for="male" class="form-check-label">Male</label>
            </div>
            <div class="form-check">
              <%= f.radio_button :gender, 'Female', data: { toggle: 'radio'}, class: 'form-check-input', id: 'female' %>
              <label for="female" class="form-check-label">Female</label>
            </div>
          </div>
        </div>

        <div class="form-group row mt-2">
          <label for="" class="col-sm-2 control-label">Salary:</label>
          <div class="col-sm-10">
            <%= f.text_field :salary, placeholder: 'Enter Salary', class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <label for="" class="col-sm-2 control-label">Hire Date:</label>
          <div class="col-sm-10">
            <%= f.date_field :hiredate, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <label for="" class="col-sm-2 control-label">Birth Date:</label>
          <div class="col-sm-10">
            <%= f.date_field :birthdate, class: 'form-control' %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <label for="" class="col-sm-2 control-label">Has Passport:</label>
          <div class="col-sm-10">
            <%= f.check_box :haspassport, class: 'form-check-input' %>
          </div>
        </div>

        <div class="form-group row mt-2">
          <label for="" class="col-sm-2 control-label">Notes:</label>
          <div class="col-sm-10">
            <%= f.text_area :notes, rows: 3, cols: 50, class: 'form-control' %>
          </div>
        </div>

    <% end %>
  </div>
</div>